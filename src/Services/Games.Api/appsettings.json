{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "ConnectionStrings": {
    "SqlServer":
      "Data Source=(localDb)\\MSSQLLocalDB;Initial Catalog=Games;Trusted_Connection=True;ConnectRetryCount=0"
  },
  "NLog": {
    "autoreload": true,
    "throwConfigExceptions": true,
    "variables": {
      "logDirectory": "${basedir}/logs"
    },
    "targets": {
      "FileLogger": {
        "type": "AsyncWrapper",
        "target": {
          "wrappedFile": {
            "type": "File",
            "fileName": "${logDirectory}/${machinename}.Log.txt",
            "layout": "${longdate} ${level}: ${message} ${exception:format=tostring}",
            "archiveFileName": "${logDirectory}/archives/${machinename}.Log_{#}.txt",
            "archiveDateFormat": "yyyy-MM-dd",
            "archiveAboveSize": "5242880",
            "archiveEvery": "Day",
            "archiveNumbering": "DateAndSequence",
            "maxArchiveFiles": "90"
          }
        }
      }
    },
    "rules": [
      {
        "logger": "*",
        "writeTo": "FileLogger"
      }
    ]
  },
  "AllowedHosts": "*"
}